@model IEnumerable<Gestao.Models.Veiculo>

@{
    ViewData["Title"] = "Veiculo MRV ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Veiculo</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning" role="alert">@TempData["Message"]</div>
}




<p>
    <a class="btn btn-primary" asp-action="Create">Criar</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Nome) *@ Placa
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Cor)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Morador.Nome) do Morador Associado
            </th>

            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Placa)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Cor)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Morador.Nome)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.VeiculoID">Edit</a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.VeiculoID">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.VeiculoID">Delete</a>
                </td>
            </tr>
        }







    </tbody>
</table>
