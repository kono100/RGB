@model IEnumerable<Gestao.Models.Reservas>

@{
    ViewData["Title"] = "Reservas MRV ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reservas</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning" role="alert">@TempData["Message"]</div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Criar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
@*                 @Html.DisplayNameFor(model => model.Nome) *@ Responsável pela Reserva
            </th>

@*             <th>
                @Html.DisplayNameFor(model => model.DataHoraRes) Data Hora Res
            </th> *@
            <th>
                Data da Reserva
            </th>

@*             <th>
                @Html.DisplayNameFor(model => model.DuracaoReserva)
            </th> *@

            <th>
                Duração
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.Morador.Nome) do Morador Associado
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DataHoraRes)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DuracaoReserva)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>



                <td>
                    @Html.DisplayFor(modelItem => item.Morador.Nome)
                </td>
                <td>



                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ReservasID">Edit</a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ReservasID">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ReservasID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
