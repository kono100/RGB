@model Gestao.Models.Visitante

@{
    ViewData["Title"] = "Delete";
}
@section styles{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.4/js/bootstrap.min.js"></script>
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Visitante</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @*             @Html.DisplayNameFor(model => model.Nome) *@ <label>Nome do Visitante</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>





    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CPF)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CPF)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.DataNasc) *@ <label>Data de Nascimento</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataNasc)
        </dd>
    </dl>



    <dl class="row">
        <dt class="col-sm-2">
            @*             @Html.DisplayNameFor(model => model.EndDate) *@ <label>Despedida Prevista</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
    </dl>


    <dl class="row">
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.Observacao) *@ <label>Observação</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observacao)
        </dd>
    </dl>


    <dl class="row">
        <dt class="col-sm-2">Morador associado</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Morador.Nome)
        </dd>
    </dl>

    <a type="button" class="btn btn-primary" asp-action="Index">Voltar</a>


    <button type="button" class="btn btn-danger" data-toggle="modal"
            data-target="#modalConfirmationDelete">
        Remover
    </button>


    <div class="modal fade" id="modalConfirmationDelete" tabindex="-1" role="dialog"
         aria-labelledby="deleteModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModal">Apagar Visitante</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Excluir Visitante @Model.Nome.ToUpper()?</p>
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="VisitanteID" />
                        <input type="submit" value="Remover" class="btn btn-warning" />
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />

    <script src="https://code.jquery.com/jquery-3.7.0.slim.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.2/js/bootstrap.min.js"></script>
}


