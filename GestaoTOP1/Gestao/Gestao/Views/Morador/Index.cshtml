@model IEnumerable<Gestao.Models.Morador>

@{
    ViewData["Title"] = "Morador MRV ";
}

<h1>Morador</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning" role="alert">@TempData["Message"]</div>
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-warning" role="alert">@TempData["Erro"]</div>
}


<p>
    <a class="btn btn-primary" asp-action="Create">Criar</a>
</p>


<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Nome) Completo
            </th>

            <th>
@*                 @Html.DisplayNameFor(model => model.Endereco) *@ Bloco
            </th>

            <th>
                @*                 @Html.DisplayNameFor(model => model.NumeroAP) *@ Numero AP
            </th>

            <th>
@*                 @Html.DisplayNameFor(model => model.DataNasc) *@ Data de Nascimento
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NumeroAP)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DataNasc)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>

                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.MoradorID">Edit</a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.MoradorID">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MoradorID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
